pipeline {
    agent any

    parameters {
        string(name: "container_name", defaultValue: "heroes-app", description: "Nombre del contenedor de docker")
        string(name: "image_name", defaultValue: "heroes-app", description: "Nombre de la imagen de docker")
        string(name: "container_port", defaultValue: "3000", description: "Puerto de docker")
    }

    stages {
        stage("build") {
            steps {
                sh 'docker build -t ${image_name} .'
            }
        }

        stage("deploy") {
            steps {
                sh 'docker run -dp ${container_port}:80 --name ${container_name} ${image_name}'
            }
        }
    }

}